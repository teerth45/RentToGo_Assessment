<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <TextView
            android:text="HouseName"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/housename" />
        
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:id="@+id/imageView1" />
        <TextView
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dip"
            android:id="@+id/houseaddress" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dip"
        android:orientation="vertical">
         <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Inquiry Via SMS "
                    android:layout_gravity="center_horizontal"
            android:id="@+id/btnsharesms"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Inquiry Via Bluetooth"
                    android:layout_gravity="center_horizontal"
            android:id="@+id/btnsharebluetooth"/> 
            <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="View Agent"
                    android:layout_gravity="center_horizontal"
            android:id="@+id/btnviewagent"/>
        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="View Property on MAP"
                    android:layout_gravity="center_horizontal"
            android:id="@+id/btnviewmap"/>

        </LinearLayout>
</LinearLayout>
