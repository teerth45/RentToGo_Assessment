<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:padding="5dip">
    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <TextView
        android:id="@+id/lblName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dip"
        android:paddingLeft="8dip"
        android:paddingBottom="4dip"
        android:textSize="18dip"
        android:text="Property Name will appear here"
        android:textColor="#ff2b53e4" />
    <TextView
        android:id="@+id/lblRoom"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="8dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="Room:"
        android:textColor="#ff000003"/>
    <TextView
        android:id="@+id/proprooms"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="54dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="N"
        android:textColor="#ff000003"/>
    <TextView
        android:id="@+id/lblBath"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="120dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="Bath:"
        android:textColor="#ff000003"/>
    <TextView
        android:id="@+id/propbaths"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="158dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="N"
        android:textColor="#ff000003"/>
    <TextView
        android:id="@+id/lblRent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="231dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="Rent:"
        android:textColor="#ff000003"/>
    <TextView
        android:id="@+id/propRent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="38dip"
        android:paddingLeft="270dip"
        android:paddingBottom="6dip"
        android:textSize="15dip"
        android:text="Price"
        android:textColor="#ff000003"/>
           
     <ImageView
        android:layout_width="30dp"
        android:layout_height="70dp"
        android:src="@drawable/arrowright"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
